@{
   Validation.RequireField("username","User Name is required."); 
   Validation.RequireField("password","Password is required.");
   Validation.RequireField("email","email is required.");

   var db = Database.Open("Empty Site");
   var username =Request.Form["username"];
   var password = Request.Form["password"];
   var email = Request.Form["email"];
   
   if(IsPost && Validation.IsValid()){
       // Define the insert query.The values to assign to the
       // colums in the Login table are defined as parameters
       // with the VALUES keyword.
       if(ModelState.IsValid) {
          var insertQuery = "INSERT INTO login (username, password, email) " +
                "VALUES (@0, @1, @2)";
          db.Execute(insertQuery, username, password, email);
          // Display the page that lists logins.
          Response.Redirect("~/Default");
        }
   }
}

